@{
  Layout = "_Layout";
}

@using ProjectName.Models;
@model List<ProjectName.Models.ChildObject>;

<h1>ChildObjects</h1>

@if (@Model.Count == 0)
{
  <h3>No childObjects have been added yet!</h3>
}

@foreach (ChildObject childObject in Model)
{
  <li>@Html.ActionLink($"{childObject.SomeProperty}", "Details", new { id = childObject.ChildObjectId}) |
  @childObject.ParentObject.SomeProperty
</li>
}

<p>@Html.ActionLink("Add new childObject", "Create")</p>